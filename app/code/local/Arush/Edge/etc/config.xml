      <jobs>
          <get_edge_view>
              <schedule><cron_expr>*/2 * * * *</cron_expr></schedule>
              <run><model>edge/observer::cacheFeeds</model></run>
          </get_edge_view>
      </jobs>
  </crontab>-->
</config>