<?xml version="1.0"?>
<config>
    <tabs>
	<arush translate="label" module="edge">
	    <label>Arush</label>
	    <sort_order>150</sort_order>
	</arush>
    </tabs>
    <sections>
        <edge translate="label comment" module="edge">
            <tab>arush</tab>
            <label>Edge</label>
            <frontend_type>text</frontend_type>
            <sort_order>30</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                
                <sync translate="label comment" module="edge">
                    <label>Edge Code</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <edge_on translate="label">
                            <label>Edge On</label>
                            <frontend_type>select</frontend_type>
            			    <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </edge_on>
            			<edge_code translate="label">
                            <label>Edge Javascript Snippet</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[When you install edge, it gives you a little snippet to put in the html head. Paste it here. For more info go to ]]></comment>
                        </edge_code>
                    </fields>
                </sync>
            </groups>
        </edge>
    </sections>
</config>
